generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
}

model InboundLoad {
  id        String        @id @default(uuid())
  carrier   String
  eta       DateTime
  pallets   Int
  dock      String?
  status    InboundStatus @default(PENDING)
  createdAt DateTime      @default(now())
  updatedAt DateTime      @updatedAt
}

model Order {
  id            String      @id @default(uuid())
  status        OrderStatus @default(PENDING)
  units         Int
  lineItems     Int
  assignedUser  String?
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt
}

enum InboundStatus {
  PENDING
  SCHEDULED
  DELIVERED
  PROCESSING
  COMPLETED
  DELAYED
  CANCELLED
}

enum OrderStatus {
  PENDING
  PICKING
  AUDITING
  AUDITED
  SHIPPING
  FULFILLED
  CANCELLED
}
